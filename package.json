{
	"name": "@olympusgame/nft-contracts",
	"version": "0.0.0",
	"scripts": {
		"lint": "prettier -c **.sol",
		"prettier": "prettier --write **.sol"
	},
	"files": [
		"src/**/*.sol"
	],
	"devDependencies": {
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-solidity": "^1.0.0-beta.19"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"*.{sol}": [
				"prettier --write",
				"git add"
			]
		},
		"ignore": [
			"lib",
			"out"
		]
	}
}
